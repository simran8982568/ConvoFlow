# Environment Configuration
NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=https://api.ayuchat.com
VITE_API_VERSION=v1

# WhatsApp Business API Configuration
VITE_WHATSAPP_API_URL=https://graph.facebook.com/v18.0
VITE_WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Authentication Configuration
VITE_JWT_SECRET=your_jwt_secret_key
VITE_SESSION_TIMEOUT=3600000

# File Upload Configuration
VITE_MAX_FILE_SIZE=16777216
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Error Reporting Configuration
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ERROR_REPORTING_ENABLED=true

# Feature Flags
VITE_ENABLE_SUPERADMIN=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AUTOMATION=true
VITE_ENABLE_TEMPLATES=true

# Branding Configuration
VITE_APP_NAME=AyuChat
VITE_APP_LOGO=/assets/images/logo.png
VITE_BRAND_COLOR=teal

# Development Configuration (only for development)
VITE_DEV_MODE=false
VITE_MOCK_API=false
VITE_DEBUG_ENABLED=false
